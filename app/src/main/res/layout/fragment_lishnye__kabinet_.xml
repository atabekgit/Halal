<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Lishny.Lishnye_Kabinet_Fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolnar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/halal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:src="@drawable/scan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nazad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Личный кабинет"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="120dp"
        android:background="#06757D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/img_menu"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            app:shapeAppearanceOverlay="@style/circular"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/AkylbekuKubanysh"
            android:layout_marginTop="50dp"
            android:textSize="21dp"
            android:layout_marginStart="40dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/imya"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/LinearLayout_imya"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="242dp"
        android:text="Имя"
        android:textSize="13dp"/>

    <LinearLayout
        android:layout_width="374dp"
        android:id="@+id/LinearLayout_imya"
        android:layout_height="40dp"
        android:background="@drawable/shape_abdu_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="201dp">

        <TextView
            android:layout_width="94dp"
            android:layout_height="17dp"
            android:inputType="textPersonName"
            android:hint="Иван Петров"
            android:layout_marginTop="10dp"
            android:id="@+id/imya_Ivan_Petrov"
            android:textSize="14dp"
            android:layout_marginLeft="40dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:id="@+id/LinearLayout_telephone"
        android:layout_height="40dp"
        android:background="@drawable/shape_abdu_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="276dp">

        <TextView
            android:id="@+id/phone_Number"
            android:layout_width="102dp"
            android:layout_height="16dp"
            android:inputType="number"
            android:hint="0777 08 03 04"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/Telephon_jazuu"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:text="Tелефон"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@id/LinearLayout_telephone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="318dp"/>

    <LinearLayout
        android:layout_width="374dp"
        android:id="@+id/LinearLayout_email"
        android:layout_height="40dp"
        android:background="@drawable/shape_abdu_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="351dp">

        <TextView
            android:id="@+id/email_adress"
            android:layout_width="138dp"
            android:layout_height="16dp"
            android:inputType="textEmailAddress"
            android:text="erfrxcdx@mail.com"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/Почта_жазуу"
        android:layout_width="41dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/LinearLayout_email"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="395dp"
        android:text="Почта"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="374dp"
        android:id="@+id/LinearLayout_Parol"
        android:layout_height="40dp"
        android:background="@drawable/shape_abdu_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="426dp">

        <TextView
            android:id="@+id/Parol"
            android:layout_width="83dp"
            android:layout_height="16dp"
            android:text="***********"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/Parol_jazuu"
        android:layout_width="51dp"
        android:layout_height="15dp"
        android:text="Пароль"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/LinearLayout_Parol"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="470dp"/>

    <LinearLayout
        android:layout_width="374dp"
        android:id="@+id/LinearLayout_Povtorit_Parol"
        android:layout_height="40dp"
        android:background="@drawable/shape_abdu_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="501dp">

        <TextView
            android:id="@+id/Povtorit_Parol"
            android:layout_width="83dp"
            android:layout_height="16dp"
            android:text="***********"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/Пол"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginTop="541dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Пол"/>

    <RadioButton
        android:id="@+id/Женский_радио_баттон"
        android:layout_width="25dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="581dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/Женский"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="581dp"
        android:text="Женский"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FFFFFF"/>

    <RadioButton
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:id="@+id/Мужской_радио_баттон"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="621dp"/>

    <TextView
        android:id="@+id/Мужской"
        android:layout_width="86dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="73dp"
        android:textColor="@color/white"
        android:layout_marginTop="621dp"
        android:text="Мужской"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#0A8791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="645dp">

        <TextView
            android:id="@+id/Отмена"
            android:layout_width="73dp"
            android:layout_height="20dp"
            android:text="Отмена"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="#0A8791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="234dp"
        android:layout_marginTop="645dp">

        <TextView
            android:id="@+id/Сохранить"
            android:layout_width="103dp"
            android:layout_height="20dp"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:text="Сохранить"
            android:textStyle="normal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>