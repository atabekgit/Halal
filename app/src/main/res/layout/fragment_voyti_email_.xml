<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A8791"
    android:layout_height="match_parent"
    tools:context=".Lishny.Voyti_email_Fragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/email_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="184dp"/>
    
    <TextView
        android:layout_width="136dp"
        android:layout_height="16dp"
        android:text="Не удается войти"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="304dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        android:textStyle="normal"/>
    
    <ImageView
        android:layout_width="266dp"
        android:layout_height="64dp"
        android:src="@drawable/text"
        android:layout_marginTop="330dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="469dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="273dp"
            android:layout_height="17dp"
            android:text="Эл. адрес или телефон пользователя"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="529dp"
        android:background="@drawable/shape_ne_udaetsya_voyti"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="215dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:text="Получить ссылку для входа"
            android:textColor="@color/white"
            android:layout_marginLeft="81dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>